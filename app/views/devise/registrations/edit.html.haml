.page-header
  %h1= t('.title')

.container
  .col-md-6.col-md-offset-3
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control', autofocus: true
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          = t('.awaiting_confirmation', email: resource.unconfirmed_email)
      .form-group
        = f.label :password
        %i= t('.leave_blank_no_change')
        = f.password_field :password, class: 'form-control', autocomplete: 'off'
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off'
      .form-group
        = f.label :current_password
        %i= t('.need_for_changes')
        = f.password_field :current_password, class: 'form-control', autocomplete: 'off'
      .form-group
        = f.submit t('.submit'), class: 'btn btn-large btn-block btn-primary'
