.navbar.navbar-default.navbar-fixed-top{:role => 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{data: {target: '.navbar-collapse', toggle: 'collapse'}, type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path}= t('.title')
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        - top_menu_items(self).each do |link, title, is_active|
          %li{class: is_active ? 'active' : ''}= link_to(title, link)
      %ul.nav.navbar-nav.navbar-right
        - right_menu_items(self).each do |link, title, is_active|
          %li{class: is_active ? 'active' : ''}= link_to(title, link)
        - if account_signed_in?
          %li= image_tag(current_account.gravatar_url(secure: true, size: 50), width: 50, height: 50)
