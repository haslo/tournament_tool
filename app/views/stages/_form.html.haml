= f.hidden_field :tournament_id
.row
  .col-md-7
    .form-group
      = f.label :type, class: 'required'
      - if stage.new_record?
        = f.select :type, select_options_from_types(stage.tournament.stage_types), {}, {class: 'form-control'}
      - else
        = text_field_tag :dummy_type, stage.type_name, class: 'form-control', disabled: true
    .form-group
      = f.label :minutes_per_round
      = f.text_field :minutes_per_round, class: 'form-control', placeholder: Stage.human_attribute_name(:minutes_per_round), type: 'url'
  .col-md-5
    .form-group
      = f.label :doors_open_time
      = f.text_field :doors_open_time, class: 'form-control', placeholder: Stage.human_attribute_name(:doors_open_time), type: 'datetime-local'
    .form-group
      = f.label :stage_start
      = f.text_field :stage_start, class: 'form-control', placeholder: Stage.human_attribute_name(:stage_start), type: 'datetime-local'
    .form-group
      = f.label :stage_end
      = f.text_field :stage_end, class: 'form-control', placeholder: Stage.human_attribute_name(:stage_end), type: 'datetime-local'
