.row
  .col-md-7
    .form-group
      = f.label :type, class: 'required'
      - if tournament.new_record?
        = f.select :type, select_options_from_types(Tournament.tournament_types), {}, {class: 'form-control'}
      - else
        = text_field_tag :dummy_type, tournament.class.type_name, class: 'form-control', disabled: true
    .form-group
      = f.label :title, class: 'required'
      = f.text_field :title, class: 'form-control', placeholder: Tournament.human_attribute_name(:title)
  .col-md-5
    .form-group
      = f.label :tournament_start, class: 'required'
      = f.datetime_local_field :tournament_start, class: 'form-control', placeholder: Tournament.human_attribute_name(:tournament_start)
    .form-group
      = f.label :tournament_end
      = f.datetime_local_field :tournament_end, class: 'form-control', placeholder: Tournament.human_attribute_name(:tournament_end)
.row
  .col-md-12
    .form-group
      = f.label :description
      = f.text_area :description, rows: 4, class: 'form-control', placeholder: Tournament.human_attribute_name(:description)
